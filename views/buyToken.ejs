<!--================Start About Us Area =================-->
<section class="about_us_area section_gap_top" style="background-color: #E9EBEE">
	<div class="container">
		<div class="row">
			<div class="col-lg-2"></div>
			<div class="col-lg-8">
				<div id="content" class="jumbotron " style="padding-top: 20px; background-color: #FFFFFF" >
					<div id="alert"></div>
					<h3 style="text-align:center;margin-bottom: 10%;margin-top: 3%">토큰 충전</h3>
					<!-- 인증 처리 후 메시지가 있으면 메시지 표시 -->
					<%
					if(output){
					if(output === "success"){
						var message = "success use Token";
					%>         <div class="alert alert-success"><%= message %></div>
					<%     }else{
						var message = "fail use Token, so Please turn it over again.\n";
					%>           <div class="alert alert-danger"><%= message %></div>
					<%     }}
					%>
					<div id="alertMessage" class="alert alert-danger" style="display: none"></div>
					<form method="post", action="buyToken/buy">
						<div class="form-group">
							<label>보유 Token</label><br>
							<div id="token"><h4 style="color: #0c5460;"><%= token %></h4></div><br>
						</div>
						<div class="form-group">
							<label>충전할 Token</label>
							<input type="text" class="form-control" placeholder="0" name="Token" maxlength="20" required>
						</div>
						<input type="submit" class="btn btn-info form-control" value="충전" style="margin-top: 5%">
					</form>
				</div>
			</div>
			<div class="col-lg-2"></div>
		</div>
	</div>

</section>
<!--================End About Us Area =================-->

