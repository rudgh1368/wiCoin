<script>
    function use() {
        var token = $('#token').val();
        console.log("token : ", token);

        if(token <=10){
            $('#alertMessage').css('display', 'block');
            $('#alertMessage').html('보유하신 토큰이 부족합니다. 충전해주세요.');
        }else{
            console.log("토큰 적합");
            $('#form').post("/useToken/use");
        }
    }
</script>
